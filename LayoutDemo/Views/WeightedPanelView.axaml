<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LayoutDemo"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="LayoutDemo.WeightedPanelView">
    <Grid ColumnDefinitions="*,*">
        <local:WeightedPanel Grid.Column="1" Orientation="Vertical" Margin="8">
            <Panel Background="Red" local:WeightedPanel.Weight="6"/>
            <Panel Background="Green" local:WeightedPanel.Weight="4"/>
        </local:WeightedPanel>
        <local:WeightedPanel Grid.Column="0" Orientation="Horizontal" Margin="8">
            <Panel Background="Red" local:WeightedPanel.Weight="6"/>
            <Panel Background="Green" local:WeightedPanel.Weight="4"/>
        </local:WeightedPanel>
    </Grid>
</UserControl>
